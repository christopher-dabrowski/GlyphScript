{
  "customLocalFormatters.formatters": [
    {
      "command": "npx antlr-format",
      "languages": ["antlr"]
    }
  ],
  "[antlr]": {
    "editor.defaultFormatter": "mike-lischke.vscode-antlr4"
  },
  "makefile.configureOnOpen": false,
  "[makefile]": {
    "editor.detectIndentation": false
  }
}
